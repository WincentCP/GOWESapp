<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCream"
    tools:context=".RideCompleteActivity">

    <!-- Bottom "Back to Home" Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_home"
        style="@style/Gowes.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/back_to_home"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Download/Share Buttons -->
    <LinearLayout
        android:id="@+id/ll_share_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/btn_back_home"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_download"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/download"
            android:textColor="@color/textSecondary"
            app:icon="@drawable/ic_download"
            app:iconTint="@color/textSecondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share"
            android:textColor="@color/textSecondary"
            app:icon="@drawable/ic_share"
            app:iconTint="@color/textSecondary" />

    </LinearLayout>

    <!-- Main Scrolling Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_share_buttons"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Green Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/header_ride_complete"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/iv_check_mark"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_check_circle_large_white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:contentDescription="@string/ride_complete_title" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ride_complete_title"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_below="@id/iv_check_mark"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ride_complete_subtitle"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:textSize="16sp"
                    android:layout_below="@id/tv_title"
                    android:layout_centerHorizontal="true"
                    tools:text="Thank you, Wicent! Stay safe ðŸŒ¿" />

            </RelativeLayout>

            <!-- Card Content Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="-40dp"> <!-- Overlap the header -->

                <!-- Ride Details Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bike BIKE-832"
                            android:textColor="@color/textPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:drawablePadding="8dp"
                            app:drawableStartCompat="@drawable/ic_electric_bike_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electric"
                            android:textColor="@color/primaryOrange"
                            android:textSize="12sp"
                            android:layout_marginStart="32dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ride_duration"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:id="@+id/tv_ride_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="50 min 35 sec"
                            android:text="00:00:00"
                            android:textColor="@color/textPrimary"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Payment Summary Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_summary"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Row 1: Ride Charge -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ride_charge"
                                android:textColor="@color/textSecondary" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 8.000"
                                android:textColor="@color/textPrimary"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <!-- Row 2: Wallet Discount -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wallet_discount"
                                android:textColor="@color/primaryGreen" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Rp 400"
                                android:textStyle="bold"
                                android:textColor="@color/primaryGreen"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <!-- Row 3: Discounted Charge -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/discounted_charge"
                                android:textColor="@color/textSecondary" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 7.600"
                                android:textColor="@color/textPrimary"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/initial_hold"
                                android:textColor="@color/textSecondary" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 25.000"
                                android:textColor="@color/textPrimary"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/refunded_to_wallet"
                            android:textColor="@color/primaryGreen"
                            android:background="@drawable/chip_refunded"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginTop="4dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/amount_paid"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_amount_paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 7.600"
                                android:textColor="@color/textPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Payment Method Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_method"
                            android:textColor="@color/textSecondary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wallet_balance"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Environmental Impact Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_environmental_impact"
                        android:padding="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/env_impact_title"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:drawablePadding="8dp"
                            app:drawableStartCompat="@drawable/ic_graph_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/env_impact_subtitle"
                            android:textColor="@color/white"
                            android:alpha="0.9"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/env_impact_amount"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/env_impact_desc"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
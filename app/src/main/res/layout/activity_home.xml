<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCream"
    tools:context=".HomeFragment">

    <!-- Konten utama yang dapat di-scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Header -->
            <TextView
                android:id="@+id/tv_welcome_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back_user"
                android:textColor="@color/textSecondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wicent Coleus Phan"
                android:textColor="@color/textPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Kartu Saldo Dompet -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient_orange"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_balance"
                        android:textColor="@color/white"
                        android:drawableStart="@drawable/ic_wallet_white"
                        android:drawablePadding="8dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_wallet_balance_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_top_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top_up_balance"
                        android:textAllCaps="false"
                        android:textColor="@color/primaryOrange"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="100dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Baris Statistik (Perbaikan Bug 2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="3">

                <!-- Stat: Total Rides -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_rides_blue" />
                        <TextView
                            android:id="@+id/tv_total_rides"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_rides"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stat: Time Saved (Sebelumnya hilang) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_time_saved" />
                        <TextView
                            android:id="@+id/tv_time_saved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_saved"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stat: CO2 Saved (Sebelumnya hilang) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_co2_saved" />
                        <TextView
                            android:id="@+id/tv_co2_saved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0kg"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/co2_saved"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Kartu Info Stasiun -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <!-- ... (Konten untuk Kartu Stasiun seperti sebelumnya) ... -->
            </androidx.cardview.widget.CardView>

            <!-- Banner Eco Warrior -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_eco_warrior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_eco_warrior_gradient"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <!-- ... (Konten untuk Eco Warrior seperti sebelumnya) ... -->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Banner Active Ride (Perbaikan Bug 3) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/active_ride_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="90dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/active_ride_banner_bg"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_active_ride_bike"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active_ride"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_live_dot"
                    android:drawablePadding="6dp"/>
                <TextView
                    android:id="@+id/tv_banner_bike_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bike BIKE-116"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_banner_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:13"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="4dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_banner_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 5.000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_cost"
                android:drawablePadding="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Bottom Navigation Bar (dari activity_main.xml) -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_background"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="0dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconTint="@color/bottom_nav_color_selector"
            app:itemTextColor="@color/bottom_nav_color_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- Tombol Scan FAB (dari activity_main.xml) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr_scan"
        app:backgroundTint="@color/primaryOrange"
        app:tint="@color/white"
        app:layout_anchor="@id/bottom_app_bar"
        app:maxImageSize="32dp"
        android:contentDescription="@string/nav_scan" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>